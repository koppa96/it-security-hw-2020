@page "/animations/{id:guid}"
@model CAFFShop.Api.Pages.Animations.AnimationDetailsModel
@{

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/AnimationDetails.css" type="text/css" />
</head>
<body>
    <h1>@Model.AnimationDetails.Name</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <img class="w-100 card-img-top" src="/images/placeholder.png">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <strong>Feltöltötte</strong>
                            @Model.AnimationDetails.AuthorName
                        </div>
                        <div class="d-flex justify-content-between">
                            <strong>Feltöltés ideje</strong>
                            @Model.AnimationDetails.CreationTime
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <div class="animation-detail-container">
                            <strong>Ár</strong>
                            @Model.AnimationDetails.Price
                        </div>
                    </div>
                    <div class="card-body">
                        @if (HttpContext.User.Identity.IsAuthenticated && )
                        <button></button>
                    </div>

                </div>
                <div class="card mt-10">
                    <div class="card-header">
                        <strong>Leírás</strong>
                    </div>
                    <div class="card-body">
                        @Model.AnimationDetails.Description
                    </div>

                </div>
            </div>

        </div>
    </div>


</body>

</html>







        }
