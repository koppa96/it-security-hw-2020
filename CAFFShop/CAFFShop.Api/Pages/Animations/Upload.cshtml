@page
@model CAFFShop.Api.Pages.Animations.UploadModel
@{
	ViewData["Title"] = "Animáció feltöltés";
}

<h1>Új animáció feltöltése</h1>
<form method="post" enctype="multipart/form-data" class="col-12 flex-column d-flex my-5">
	<div asp-validation-summary="All" class="col-12 text-danger text-center"></div>
	@if (Model.ShowSuccess)
	{
		<div class="col-12 text-success text-center pb-4">Sikeres feltöltés!</div>
	}
	<div class="col-12 my-1">
		<label asp-for="Model.Name" class="col-3 text-right p-0 px-3"></label>
		<input asp-for="Model.Name" class="col-6 px-1 form-control d-inline" />
	</div>
	<div class="col-12 my-1">
		<label asp-for="Model.Price" class="col-3 text-right p-0 px-3"></label>
		<input asp-for="Model.Price" value="1000" class="col-2 px-1 form-control d-inline" /> Ft
	</div>
	<div class="col-12 my-1">
		<label asp-for="Model.File" class="col-3 text-right p-0 px-3"></label>
		<input asp-for="Model.File" class="col-6 px-1" />
	</div>
	<div class="col-12 my-1">
		<label asp-for="Model.Description" class="col-3 text-right p-0 px-3 align-top"></label>
		<textarea asp-for="Model.Description" class="col-6 px-1 form-control d-inline"></textarea>
	</div>
	<div class="col-9 my-1 text-right px-0">
		<input type="submit" value="Feltöltés" class="btn btn-primary" />
	</div>
</form>
<style>
	.validation-summary-errors li {
		list-style-type: none;
	}
</style>